<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:ReactorSim.Views"
             x:Class="ReactorSim.MainPageView">

  <ContentPage.Resources>
    <ResourceDictionary>
      <drawable:SimulationDrawable x:Key="drawable"/>
    </ResourceDictionary>
  </ContentPage.Resources>

  <Grid BackgroundColor="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <GraphicsView Drawable="{StaticResource drawable}"
                  x:Name="SimulationGraphicsView"
                  Grid.Column="0"
                  Grid.Row="0"
                  Grid.RowSpan="6"/>

      
    <StackLayout Orientation="Horizontal"
                 Grid.Column="0"
                 Grid.Row="6">
      <Label
        Text="Test"
        FontSize="Title"
        TextColor="Black"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
    </StackLayout>

    <StackLayout Orientation="Vertical"
                 Grid.Column="1"
                 Grid.Row="0">
      <StackLayout Orientation="Horizontal"
                   HorizontalOptions="Center">
        <Label Text="Automatic moderation"
               TextColor="Black"
               VerticalOptions="Center"
               Margin="5"/>
        <Switch Margin="5"/>
      </StackLayout>
      <StackLayout Orientation="Horizontal"
                   HorizontalOptions="Center">
          <Label Text="Target Power: "
                 TextColor="Black"
                 VerticalOptions="Center"
                 Margin="5"/>
          <Entry Keyboard="Numeric"
                 TextColor="Black"/>
      </StackLayout>
      <StackLayout Orientation="Horizontal"
                   HorizontalOptions="Center">
        <Button Text="/\" Margin="10"/>
        <Button Text="HOLD" Margin="10"/>
        <Button Text="\/" Margin="10"/>
        <Button Text="SCRUM" Background="Red" FontAttributes="Bold" Margin="15"/>
      </StackLayout>
    </StackLayout>
      
    <StackLayout Orientation="Vertical"
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="3">
      <Label Text="Power (number of neutrons):"
            TextColor="Black"/>
      <Label Text="{Binding NeutronCount}"
            TextColor="Black"/>
    </StackLayout>
  </Grid>
</ContentPage>
